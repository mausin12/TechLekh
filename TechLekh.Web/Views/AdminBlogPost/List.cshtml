@model IEnumerable<TechLekh.Web.Models.Domain.BlogPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>View Blog Post</h1>
	</div>
</div>
<div class="container py-5">
	@if (Model != null && Model.Any())
	{
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<td>Heading</td>
					<td>Tags</td>
					<td></td>
				</tr>
			</thead>
			<tbody>
				@foreach (var blog in Model)
				{
					<tr>
						<td>@blog.Id</td>
						<td>@blog.Heading</td>
						<td>
							@foreach (var tag in blog.Tags)
							{
								<span class="badge bg-secondary">@tag.Name</span>
							}
						</td>
						<td>
							<a asp-area="" asp-controller="AdminBlogPost" asp-action="Edit" asp-route-id="@blog.Id">Edit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>No blog post found</p>
	}
</div>